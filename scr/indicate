#!/bin/sh
#
# $Id: indicate,v 1.7 2006/12/27 19:09:52 jon Exp $
#
# Script to find the indicator of an irreducible representation
# Assumes a and b in standard base form
#
# Inputs
# $1: initial memory
# $2: a name for the form
# $3: generator a
# $4-: others generators
#
# Return codes
# 1: error in parameters
# 0: ok
#
usage="$0: usage: $0 <memory> <form> <a> <b> [<other generators>]"
if [ $# -lt 4 ]; then
  echo "$usage"
  exit 1;
fi
. functions
memory=$1
form=$2
a=$3
b=$4
shift 2
if [ -e $a -a -e $b ]; then
  q=`zprime $a`
  nor=`znor $a`
  noc=`znoc $a`
  if [ $nor -ne $noc ]; then
    echo "$0: $a is not square"
    exit 1
  fi
  if [ $nor -ne `znor $b` -o $nor -ne `znoc $b` ]; then
    echo "$0: $a and $b are not compatible"
    exit 1
  fi
else
  echo "$0: missing files $a or $b"
  exit 1
fi
# First compute orders
line=
for x in $*; do
  o=`order $x`
  ret=$?
  if [ 0 -ne $ret ]; then
    echo Cannot compute order of $x
    exit 1
  fi
  line="$line $x $o"
done
exec indicate_with_orders $memory $form $line
