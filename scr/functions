#
# Functions to support the meataxe scripts
#
function more_memory()
{
  local x
  if [ $1 -ge 102400 ]; then
    let x=$1+51200
  else
    let x=$1*2
  fi
  echo $x
}

function new_name()
{
  local o
  local nor
  local dim
  local x
  o=$1
  nor=$2
  dim=$3
  name=${o}_${nor}_${dim}
  if [ -e ${name}_1 ]; then
    x=1
    while [ -e ${name}_${x}_1 ]; do
      let x=$x+1
    done
    name=${name}_${x}
  fi
  echo $name
}
